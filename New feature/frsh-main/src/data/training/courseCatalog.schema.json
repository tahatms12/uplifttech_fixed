{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CourseCatalog",
  "type": "object",
  "required": ["programOverview", "roles", "courses"],
  "properties": {
    "programOverview": {
      "type": "array",
      "items": { "type": "string" }
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "active"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "active": { "type": "boolean" }
        }
      }
    },
    "courses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "slug", "title", "summary", "roles", "tags", "durationPlan", "prerequisites", "outcomes", "source", "days"],
        "properties": {
          "id": { "type": "string" },
          "slug": { "type": "string" },
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "roles": { "type": "array", "items": { "type": "string" } },
          "tags": { "type": "array", "items": { "type": "string" } },
          "durationPlan": { "type": "number", "const": 7 },
          "prerequisites": { "type": "array", "items": { "type": "string" } },
          "outcomes": { "type": "array", "items": { "type": "string" } },
          "source": {
            "type": "object",
            "required": ["heading", "raw"],
            "properties": {
              "heading": { "type": "string" },
              "raw": { "type": "array", "items": { "type": "string" } }
            }
          },
          "days": {
            "type": "array",
            "minItems": 7,
            "maxItems": 7,
            "items": {
              "type": "object",
              "required": ["dayNumber", "dayTitle", "estimatedTimeMinutes", "steps"],
              "properties": {
                "dayNumber": { "type": "number" },
                "dayTitle": { "type": "string" },
                "estimatedTimeMinutes": { "type": "number" },
                "steps": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["stepId", "title", "type", "contentBlocks", "activities", "acceptanceCriteria", "verification", "roleRelevance"],
                    "properties": {
                      "stepId": { "type": "string" },
                      "title": { "type": "string" },
                      "type": { "type": "string", "enum": ["Learn", "Observe", "Do", "Simulate", "Check", "Document", "Reflect"] },
                      "contentBlocks": { "type": "array", "items": { "type": "string" } },
                      "activities": { "type": "array", "items": { "type": "string" } },
                      "acceptanceCriteria": { "type": "array", "minItems": 1, "items": { "type": "string" } },
                      "assessment": {
                        "type": "object",
                        "required": ["questions"],
                        "properties": {
                          "questions": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "required": ["prompt", "answerKey"],
                              "properties": {
                                "prompt": { "type": "string" },
                                "answerKey": { "type": "string" },
                                "rationale": { "type": "string" }
                              }
                            }
                          }
                        }
                      },
                      "verification": {
                        "type": "object",
                        "required": ["verification_status", "verification_notes", "references", "lastReviewed"],
                        "properties": {
                          "verification_status": { "type": "string", "enum": ["verified", "needs_review", "conflicting_sources"] },
                          "verification_notes": { "type": "string" },
                          "references": { "type": "array", "items": { "type": "object" } },
                          "lastReviewed": { "type": "string" }
                        }
                      },
                      "roleRelevance": { "type": "array", "items": { "type": "string" } }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
